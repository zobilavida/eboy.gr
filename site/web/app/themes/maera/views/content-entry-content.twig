<div class="entry-content" itemprop="description">
	{% if post.thumbnail %}
		<a class="featured-image" href="{{ fn( 'esc_url', post.link ) }}" title="{{ fn( 'esc_attr', post.title ) }}">
			<img class="featured-image" src="{{ fn( 'esc_url', post.thumbnail.src|resize(thumbnail.width, thumbnail.height) ) }}" srcset="{{ fn( 'esc_url', post.thumbnail.src|resize(thumbnail.width, thumbnail.height)|retina(1) ) }} 1x, {{ fn( 'esc_url', post.thumbnail.src|resize(thumbnail.width, thumbnail.height)|retina(2) ) }}  2x">
		</a>
	{% endif %}

	{% if teaser_mode == 'full' %}
		{{ post.content }}
	{% else %}
		{{ post.get_preview }}
	{% endif %}
	<div class="clearfix"></div>
</div>
